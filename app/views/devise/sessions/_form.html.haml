.container-fluid
  .flex-container{style:'background: #fff;'}
    .row
      .col-sm-6.order-2.order-sm-1.holder-login
        #login
          = image_tag  "logo.png", class: ''
          %p.login-heading
            = t('login_to_system')
          .login-form
            = form_for('user', url: user_session_path, html: {class: 'form-horizontal'}) do |f|
              = devise_error_messages!
              .form-group
                = f.email_field :email, autofocus: true, placeholder: 'Email', class: 'form-control'
              .form-group#show_hide_password
                .inner-addon.right-addon
                  %a{ href: ''}
                    = fa_icon 'eye-slash'
                  = f.password_field :password,
                    autocomplete: 'off',
                    placeholder: 'Password',
                    class: 'form-control'
              .row
                .col-sm-6
                  = f.submit 'Login', class: 'btn btn-primary'
      .col-sm-6.login-artwork.order-1.order-sm-2





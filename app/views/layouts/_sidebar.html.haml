%nav.main-header.navbar.navbar-expand.navbar-white.navbar-light
  %ul.navbar-nav
    %li.nav-item
      %a.nav-link.menu-iconfix{"data-widget" => "pushmenu", :href => "#"}
        = fa_icon('bars')
    %li.nav-item.d-none.d-sm-inline-block
      = link_to root_path, class: 'nav-link' do
        = t('.home')
  %ul.navbar-nav.ml-auto
    %li.nav-item
      %a.nav-link.pt-0{"data-slide" => "true", "data-widget" => "control-sidebar", :href => "#"}
        .user-panel.d-flex
          .image
            = image_tag  "user2-160x160.png", class: 'img-circle'
          .info
            = current_user.email
            = fa_icon('angle-down')
%aside.main-sidebar.sidebar-dark-primary.elevation-4
  = link_to root_path, class: "brand-link logo-switch" do
    = image_tag  "logo.png", class: 'brand-image-xl logo-xs'
    = image_tag  "logo.png", class: 'brand-image-xs logo-xl'
  .sidebar
    %nav.mt-2
      %ul.nav.nav-pills.nav-sidebar.flex-column{"data-accordion" => "false", "data-widget" => "treeview", :role => "menu"}
        %li.nav-item.has-treeview{class: "#{['works'].include?(params[:controller]) ? 'menu-open' : ''}"}
          = link_to '#', class: "nav-link #{'active' if ['works'].include?(params[:controller])}" do
            %i.nav-icon.fa.fa-tasks.ct-settings-icon
            %p Tasks
            %i.right.fa.fa-angle-left
          %ul.nav.nav-treeview
            %li.nav-item
              = link_to works_path, class: "nav-link" do
                %i.nav-icon.fa.fa-circle-o.ct-city-icon
                %p Tasks
%aside.control-sidebar.control-sidebar-dark
  %div
    %ul.profile-menu
      %li
        = link_to destroy_user_session_path, method: :delete, class: '' do
          %i.icon.ion-md-lock.ct-logout-icon.fa.fa-lock Logout

